{
    "private": true,
    "name": "letsscience-app",
    "version": "0.0.0",
    "license": "MIT",
    "scripts": {
        "build": "preact build",
        "serve": "sirv build --port 8080 --cors --single",
        "dev": "preact watch",
        "lint": "ts-standard",
        "lint-fix": "ts-standard --fix",
        "test": "jest",
        "commit": "npm run lint && npm run test"
    },
    "devDependencies": {
        "@types/react": "^18.0.9",
        "@vercel/node": "^1.15.3",
        "enzyme": "^3.10.0",
        "enzyme-adapter-preact-pure": "^4.0.1",
        "jest": "^27.0.0",
        "jest-preset-preact": "file:jest-preset-preact",
        "preact-cli": "^3.0.0",
        "sirv-cli": "2.0.2",
        "ts-standard": "^11.0.0",
        "typescript": "^4.7.2"
    },
    "dependencies": {
        "ky-universal": "^0.10.1",
        "preact": "^10.3.2",
        "preact-render-to-string": "^5.1.4",
        "preact-router": "^4.0.1",
        "react": "^18.1.0",
        "react-p5-wrapper": "^3.3.0",
        "workbox-routing": "^6.5.3",
        "workbox-strategies": "^6.5.3"
    },
    "jest": {
        "preset": "jest-preset-preact",
        "setupFiles": [
            "<rootDir>/tests/__mocks__/browserMocks.js",
            "<rootDir>/tests/__mocks__/setupTests.js"
        ]
    },
    "ts-standard": {
        "ignore": [
            "jest-preset-preact",
            "api"
        ]
    }
}
